{
  "name": "codeeasy",
  "displayName": "codeEasy",
  "description": "It makes your coding journey easy and more productive.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onCommand:extension.editCode"],
  "main": "./extension.js",
  
    "contributes": {
    "commands": [
        {
            "command": "codeeasy.openSidebar",
            "title": "Code Generator"
        },
        {
          "command": "codeeasy.editCode",
          "title": "Code Editor"
        }
    ],
    "viewsContainers": {
        "activitybar": [
            {
                "id": "codeGeneratorSidebar",
                "title": "Code Generator",
                "icon": "resources/spark.png"
            }
        ]
    },
    "views": {
        "codeGeneratorSidebar": [
            {
                "type": "webview",
                "id": "codeGeneratorView",
                "name": "Code Generator"
            }
        ]
    },
    "menus": {
        "view/title": [
            {
                "command": "codeeasy.openSidebar",
                "when": "view == codeGeneratorView"
            }
        ],
        "editor/context": [
          {
            "command": "codeeasy.editCode",
            "when": "editorHasSelection",
            "group": "navigation"
          }
        ]
    }
},
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.22.0",
    "dotenv": "^16.4.7",
    "tree-sitter": "^0.22.4",
    "tree-sitter-c": "^0.23.5",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-python": "^0.23.6"
  }
}
